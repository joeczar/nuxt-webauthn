shamefully-hoist=true
strict-peer-dependencies=false
auto-install-peers=true
node-linker=hoisted

# Ensure packages are installed in the project's node_modules
public-hoist-pattern[]="*"

# Optional: Set a custom registry if needed
# registry=https://registry.npmjs.org/

# Optional: Set authentication for private packages if needed
# //registry.npmjs.org/:_authToken=${NPM_TOKEN}

# Optional: Set a custom store directory for pnpm
store-dir=.pnpm-store